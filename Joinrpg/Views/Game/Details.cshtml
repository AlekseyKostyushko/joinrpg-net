@using JoinRpg.Web.Helpers
@model JoinRpg.Web.Models.ProjectDetailsViewModel

@{
    ViewBag.Title = "Игра «"+ Model.ProjectName +"»";
}

<h2>@ViewBag.Title</h2>


@if (string.IsNullOrWhiteSpace(Model.ProjectAnnounce.Contents))
{
    <hr/>
    @Model.ProjectAnnounce.ToHtmlString()
}

<hr/>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>
    <Hr/>
     @Html.ActionLink("Перейти к сетке ролей", "Index", "GameGroups", new {Model.ProjectId}, null)
    <hr/>
    <h4>Мастера</h4>
    <ul>
        @foreach (var master in Model.Masters)
        {
            <li>@Html.DisplayFor(model => master)</li>
        }
    </ul>
</div>