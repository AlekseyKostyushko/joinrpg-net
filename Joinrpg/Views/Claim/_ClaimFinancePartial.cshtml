@using JoinRpg.Web.Models
@model ClaimViewModel
<details>
    <summary>
        Отметить взнос
    </summary>
    @using (Html.BeginForm("FinanceOperation", "Claim", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        var viewModel = new AcceptCashViewModel
        {
            ProjectId = Model.ProjectId,
            ClaimId = Model.ClaimId,
            ParentCommentId = null,
            EnableHideFromUser = false,
            HideFromUser = false,
            ActionName = "Отметить взнос",
            OperationDate = DateTime.Today
        };
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => viewModel.Money, htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => viewModel.Money, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>

            <div class="form-group">
                <div class="input-group date">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </span>
                    <input id="OperationDate"
                           name="OperationDate"
                           data-provide="datepicker"
                           class="datepicker form-control"
                           data-date-end-date="0d"
                           value="@Model" />

                </div>
            </div>
        </div>

        @Html.Partial("AddCommentPartial", viewModel)
    }
</details>