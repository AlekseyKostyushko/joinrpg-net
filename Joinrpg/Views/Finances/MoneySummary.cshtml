@model IEnumerable<JoinRpg.Web.Models.PaymentTypeSummaryViewModel>

@{
    ViewBag.Title = "Сводка по деньгам";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Master)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>@Html.DisplayFor(modelItem => item.Master)</td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)&nbsp;&#8381;
        </td>
    </tr>
}
    <tr>
        <td>
            <b>Итого</b>:
        </td>
        <td></td>
        <td>
            <b>@Model.Sum(m => m.Total)&nbsp;&#8381;</b>
        </td>
    </tr>

</table>
