@using Microsoft.AspNet.Identity
@model JoinRpg.Web.Models.MasterMenuViewModel

@helper GetDisabled(bool access)
{
    @(!access ? "class=disabled" : "")
}
<div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand">@Html.ActionLink(@Model.ProjectName, "Details", "Game", new {Model.ProjectId}, null)</span>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Сетка ролей", "Index", "GameGroups", new {Model.ProjectId}, null)
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Сюжеты <span class="caret"></span></a>

                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Все", "Index", "Plot", new {Model.ProjectId}, null)</li>
                            <li>@Html.ActionLink("В работе", "InWork", "Plot", new {Model.ProjectId}, null)</li>
                            <li>@Html.ActionLink("Готовые", "Ready", "Plot", new {Model.ProjectId}, null)</li>
                        </ul>
                    </li>
                    <li>
                        
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Заявки <span class="caret"></span></a>

                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Все активные", "ActiveList", "Claim", new {Model.ProjectId}, null)</li>
                            <li>@Html.ActionLink("Отклоненные/отозванные", "DeclinedList", "Claim", new {Model.ProjectId}, null)</li>
                            <li>@Html.ActionLink("Проблемные", "Problems", "Claim", new {Model.ProjectId}, null)</li>
                            <li>@Html.ActionLink("На обсуждении", "Discussing", "Claim", new {Model.ProjectId}, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Заявки по мастерам<span class="caret"></span></a>

                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Мои", "Responsible", "Claim", new {Model.ProjectId, ResponsibleMasterId = User.Identity.GetUserId()}, null)</li>
                            <li role="separator" class="divider"></li>
                            @foreach (var master in Model.Masters.Where(master => master.UserId.ToString() != User.Identity.GetUserId()))
                            {
                                <li>@Html.ActionLink(master.DisplayName, "Responsible", "Claim", new {Model.ProjectId, ResponsibleMasterId = master.UserId}, null)</li>
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Дополнительно <span class="caret"></span></a>

                        <ul class="dropdown-menu">

                            
                            <li @GetDisabled(Model.AccessToProject.CanChangeProjectProperties)>@Html.ActionLink("Свойства проекта", "Edit", "Game", new {Model.ProjectId}, null)</li>
                            <li @GetDisabled(Model.AccessToProject.CanChangeFields)>@Html.ActionLink("Настройка полей персонажей", "Index", "GameField", new {Model.ProjectId}, null)</li>
                            <li>@Html.ActionLink("Мастера", "Index", "Acl", new {Model.ProjectId}, null)</li>
                            @if (Model.HasAllrpg && Model.AccessToProject.IsOwner)
                            {
                                <li>@Html.ActionLink("Обновить из allrpg", "AllrpgUpdate", "Game", new {Model.ProjectId}, null)</li>
                            }
                        </ul>
                    </li>
                </ul>

            </div>
        </div>
    </div>