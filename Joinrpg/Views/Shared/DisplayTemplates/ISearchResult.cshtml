@using JoinRpg.Web.Helpers
@using JoinRpg.Web.Models
@model TargetedSearchResultViewModel

<div>
    <h4>
        @{
          var gameObjectLinkViewModel = Model.SearchResult.AsObjectLink();
        }
        @Html.DisplayFor(model => gameObjectLinkViewModel)

    </h4>
    <p>
        @{
          string descriptionWithTags =
              (Model.SearchResult.Description.Contents ?? "")
              .Replace(Model.SearchTarget, "<b>" + Model.SearchTarget + "</b>");
        }
        @Html.Raw(descriptionWithTags)
    </p>
</div>