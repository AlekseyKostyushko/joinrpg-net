@using JoinRpg.DataModel
@using JoinRpg.Domain
@model JoinRpg.DataModel.FinanceOperation
    @if (Model.FeeChange != 0)
    {
        <br/><span><b>Изменение взноса</b>: @Model.FeeChange руб.</span>
    }
    @if (Model.MoneyAmount > 0)
    {
    <br /><span><b>Оплата денег игроком</b>: @Model.MoneyAmount руб.</span>
    }
    else if (Model.MoneyAmount < 0)
    {
        <br/>
        <span><b>Возврат денег игроку</b>: @Model.MoneyAmount руб.</span>
    }
<br/><span><b>Дата операции</b>: @Model.OperationDate.ToShortDateString()</span>
<br/><span><b>Способ оплаты</b>: @Model.PaymentType.GetDisplayName()</span>

@if (Model.State == FinanceOperationState.Declined)
{
    <br/><span class="label label-warning">Мастер не подтверждает оплату</span>
}
else if (Model.State == FinanceOperationState.Proposed)
{
    <br/><span class="label label-default">Ждет одобрения мастером</span>
}
