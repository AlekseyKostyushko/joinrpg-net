@using JoinRpg.DataModel
@using JoinRpg.Domain
@model JoinRpg.Domain.CharacterFieldValue
<div class="form-group">
    <label class="control-label col-md-2">@Model.Field.FieldName</label>
    <div class="col-md-10">
        @*TODO: May be also set client id here*@
        @if (Model.Field.FieldType == CharacterFieldType.Dropdown)
        {
            var projectCharacterFieldDropdownValue = Model.GetDropdownValueOrDefault();
            @(projectCharacterFieldDropdownValue == null ? null : projectCharacterFieldDropdownValue.Label)
        }
        else
        {
            @Html.DisplayFor(model => model.Value, new {htmlAttributes = new {@class = "form-control"}})
        }
    </div>
</div>