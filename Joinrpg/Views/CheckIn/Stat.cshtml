@model dynamic

@{
  ViewBag.Title = "Статистика по регистрации";
}

<h2>@ViewBag.Title</h2>

<div class="h1">
  Осталось зарегистрировать: <span id="checkinStat"></span>
</div>

@section Scripts {
  <script type="text/javascript">
    $(function() {
      function load() {
        $.getJSON("/x-game-api/@ViewBag.ProjectId/checkin/allclaims",
          function(data) {
            var x = data.length;
            $('#checkinStat').text(x);
            setTimeout(load, 1000);
          });
      };

      load();
    });
  </script>
}
